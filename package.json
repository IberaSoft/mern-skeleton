{
  "name": "mern-skeleton",
  "version": "1.0.0",
  "description": "Modern MERN skeleton template with React 19, TypeScript, Vite, Tailwind, shadcn-ready UI, Docker, and ESLint/Prettier tooling.",
  "license": "MIT",
  "keywords": [
    "react",
    "node",
    "express",
    "mongodb",
    "mern",
    "typescript",
    "vite",
    "tailwind"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shamahoque/mern-simplesetup.git"
  },
  "homepage": "https://github.com/shamahoque/mern-simplesetup",
  "type": "module",
  "main": "server/server.ts",
  "scripts": {
    "dev:server": "NODE_ENV=development nodemon --watch server --ext ts --exec node --loader ts-node/esm server/server.ts",
    "dev:client": "vite",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build": "npm run build:client && npm run build:server",
    "start": "NODE_ENV=production node dist/server/server.js",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@types/node": "^22.9.3",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "mongodb": "^7.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@tailwindcss/vite": "^4.0.0",
    "@types/express": "^5.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "tailwindcss": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3",
    "vite": "^6.0.0",
    "@vitejs/plugin-react-swc": "^3.7.1"
  }
}
